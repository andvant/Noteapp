<UserControl x:Class="Noteapp.Desktop.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Noteapp.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" >

            <Grid Margin="0,40" HorizontalAlignment="Center" Width="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" FontSize="22" HorizontalAlignment="Left" Margin="0,40">Email:</Label>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding Email}" HorizontalAlignment="Right" FontSize="22"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Enable encryption" FontSize="22" HorizontalAlignment="Left"/>
                <CheckBox Grid.Row="1" Grid.Column="1" IsChecked="{Binding EncryptionEnabled}" />
            </Grid>

            <Button Content="Log out" Command="{Binding LogoutCommand}"  Margin="0,40" FontSize="24" Height="48" Width="190"/>
            <Button Content="Delete account" Command="{Binding DeleteAccountCommand}" Margin="0,40" FontSize="24" Height="48" Width="190"/>
        </StackPanel>
    </ContentControl>
</UserControl>
