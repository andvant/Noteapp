<UserControl x:Class="Noteapp.Desktop.Views.NotesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noteapp.Desktop.Views"
        xmlns:vm="clr-namespace:Noteapp.Desktop.ViewModels"
        mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Command="{Binding CreateNoteCommand}" Content="New note" Width="100"/>

        <Button Grid.Row="0" Grid.Column="1" Command="{Binding EditNoteCommand}" 
                Content="Save note" Width="100" CommandParameter="{Binding SelectedNote.Text}"/>

        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Id, StringFormat=Id: {0}}" FontSize="14"/>
                        <TextBlock Text="{Binding AuthorId, StringFormat=AuthorId: {0}}" FontSize="14"/>
                        <TextBlock Text="{Binding Created, StringFormat=Created: {0}}" FontSize="14"/>
                        <TextBlock Text="{Binding Updated, StringFormat=Updated: {0}}" FontSize="14"/>
                        <Button Command="{Binding DataContext.DeleteNoteCommand, 
                            RelativeSource={RelativeSource AncestorType={x:Type local:NotesView}}}" 
                            CommandParameter="{Binding Id}" Content="[delete]"
                            VerticalAlignment="Center" HorizontalAlignment="Right" 
                            Height="25" Width="60" FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedNote.Text, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto"/>

    </Grid>
</UserControl>
