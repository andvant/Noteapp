<UserControl x:Class="Noteapp.Desktop.Views.NotesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noteapp.Desktop.Views"
        xmlns:vm="clr-namespace:Noteapp.Desktop.ViewModels"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0">
            <Button Content="Archived" Command="{Binding ToggleShowArchivedCommand}" DockPanel.Dock="Left"/>
            <Button Grid.Row="0" Grid.Column="0" Command="{Binding CreateCommand}" Content="New" Width="100" DockPanel.Dock="Right"/>
        </DockPanel>
        
        <DockPanel Grid.Row="0" Grid.Column="1">
            <Button DockPanel.Dock="Left"  Command="{Binding UpdateCommand}" Content="Save" Width="100" />
            <Button DockPanel.Dock="Right" Command="{Binding ExportNotesCommand}" Content="Export notes" Width="160" />
            <Button DockPanel.Dock="Right" Command="{Binding ImportNotesCommand}" Content="Import notes" Width="160" />
            <Button DockPanel.Dock="Right" Command="{Binding ShowHistoryCommand}" Content="History" Width="160" />
        </DockPanel>
        

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Label Content="Sort by:" />
            <Button Content="Created" Margin="5" Command="{Binding SortyByCreatedCommand}" />
            <Button Content="Updated" Margin="5" Command="{Binding SortyByUpdatedCommand}" />
            <Button Content="Text" Margin="5" Command="{Binding SortyByTextCommand}" />
        </StackPanel>
        
        <ListBox Grid.Row="2" Grid.Column="0" ItemsSource="{Binding Notes}" SelectedItem="{Binding SelectedNote}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="{Binding Id, StringFormat=Id: {0}}" FontSize="14"/>
                        <TextBlock Text="{Binding AuthorId, StringFormat=AuthorId: {0}}" FontSize="14"/>
                        <TextBlock Text="{Binding Created, StringFormat=Created: {0}}" FontSize="14"/>
                        <TextBlock Text="{Binding Updated, StringFormat=Updated: {0}}" FontSize="14"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding DataContext.DeleteCommand, 
                                RelativeSource={RelativeSource AncestorType={x:Type local:NotesView}}}" 
                                CommandParameter="{Binding Id}" Content="[delete]"
                                VerticalAlignment="Center" 
                                Height="25" Width="60" FontSize="14"/>
                            <Button Command="{Binding DataContext.ToggleLockedCommand, 
                                RelativeSource={RelativeSource AncestorType={x:Type local:NotesView}}}" 
                                CommandParameter="{Binding}" Content="[lock]"
                                VerticalAlignment="Center" 
                                Height="25" Width="60" FontSize="14"/>
                            <CheckBox IsChecked="{Binding Locked, Mode=OneWay}" IsEnabled="False" />
                            <Button Command="{Binding DataContext.ToggleArchivedCommand, 
                                RelativeSource={RelativeSource AncestorType={x:Type local:NotesView}}}" 
                                CommandParameter="{Binding}" Content="[archive]"
                                VerticalAlignment="Center" 
                                Height="25" Width="60" FontSize="14"/>
                            <CheckBox IsChecked="{Binding Archived, Mode=OneWay}" IsEnabled="False" />
                            <Button Command="{Binding DataContext.TogglePinnedCommand, 
                                RelativeSource={RelativeSource AncestorType={x:Type local:NotesView}}}" 
                                CommandParameter="{Binding}" Content="[pin]"
                                VerticalAlignment="Center" 
                                Height="25" Width="60" FontSize="14"/>
                            <CheckBox IsChecked="{Binding Pinned, Mode=OneWay}" IsEnabled="False" />
                            <Button Command="{Binding DataContext.TogglePublishedCommand, 
                                RelativeSource={RelativeSource AncestorType={x:Type local:NotesView}}}" 
                                CommandParameter="{Binding}" Content="[publish]"
                                VerticalAlignment="Center" 
                                Height="25" Width="60" FontSize="14"/>
                            <CheckBox IsChecked="{Binding Published, Mode=OneWay}" IsEnabled="False" />
                            <TextBlock Text="{Binding PublicUrl}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



        <Grid Grid.Row="2" Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!--Selected note text-->
            <TextBox Grid.Row="0" IsReadOnly="{Binding SelectedNote.Locked}" 
                Text="{Binding SelectedNote.Text, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" AcceptsReturn="True" Height="Auto" Width="Auto"
                     HorizontalAlignment="Stretch"/>

            
            <!--Selected note history-->
            <StackPanel Grid.Row="1" Orientation="Vertical" Visibility="{Binding HistoryVisibility}" Margin="10">
                <Slider Minimum="0" Maximum="{Binding MaximumSnapshotIndex}" 
                    Width="400"
                    TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" 
                    Value="{Binding CurrentSnapshotIndex}"/>
                
                <TextBlock Text="{Binding CurrentSnapshotDate}" HorizontalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" Command="{Binding CancelHistoryCommand}" />
                    <Button Content="Restore" Command="{Binding RestoreSnapshotCommand}"/>
                </StackPanel>
            </StackPanel>

            

        </Grid>

    </Grid>
</UserControl>
